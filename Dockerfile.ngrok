FROM ngrok/ngrok:3

# Switch to root so we can write config
USER root

# Copy in our script
COPY entrypoint.sh /entrypoint.sh

# Strip any Windows CRs and make it executable
RUN sed -i 's/\r$//' /entrypoint.sh \
 && chmod +x /entrypoint.sh

# Drop back to the unprivileged user
USER ngrok

# Launch via sh so entrypoint.sh is interpreted, not execâ€™d directly
ENTRYPOINT ["sh", "/entrypoint.sh"]
